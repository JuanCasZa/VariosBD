create table inventarios (
id int identity (1,1),
nombre varchar (50),
precio int,
descuento int,
iva int,
precio_final int
primary key (id)
);
go

insert into inventarios (nombre, precio, descuento, iva, precio_final) values
('Audífonos Bluetooth', 120000, 10000, 0, 0),
('Teclado Mecánico', 250000, 15000, 0, 0),
('Mouse Gamer', 85000, 5000, 0, 0),
('Monitor LED 24"', 600000, 30000, 0, 0),
('Portátil Lenovo', 2200000, 80000, 0, 0),
('Disco Duro 1TB', 180000, 10000, 0, 0),
('Memoria USB 64GB', 60000, 5000, 0, 0),
('Impresora Multifuncional', 450000, 20000, 0, 0),
('Tablet Samsung', 900000, 40000, 0, 0),
('Silla Ergonómica', 350000, 25000, 0, 0)

select *from inventarios

--1.valores actualizados al 19% para el iva
update inventarios set iva=0.19;

--2.precio menos el descuento sin aplicar los impuestos
select nombre ,(precio - descuento) as 'valores del inventario' from inventarios;

--3. valor del inventario a precio de venta 
select nombre, (precio-descuento + iva) as 'precio de venta' from inventarios;

--4. valor de productos  al ser vendidos con impuestos
update  inventarios set precio_final= (precio-descuento + iva);

select nombre, precio_final as 'Impuesto agregado' from inventarios;

--5. precio de venta e impuestos
select sum(precio_final) as 'Inventario total' from inventarios;

--6. 3 valores determinados por nosotros

--ganancias del 15% por producto
select nombre, (precio_final *0.15) as 'Ganancias estimadas aplicando el 15%' from inventarios;

--Total de descuentos aplicados
select sum(descuento) as 'Total de descuentos' from inventarios;

--promedio para el precio final
select avg(precio_final) as 'Promedio para el precio final' from inventarios;
